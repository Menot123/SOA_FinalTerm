<style>
    .footer {
        display: none;
    }

    #link-hover {
        position: relative;
    }

    #link-hover:hover .link__redirect {
        display: block;
    }

    .link__redirect {
        position: absolute;
        right: -50px;
        top: 50px;
        background-color: #05630a;
        display: none;
        padding: 12px;
        border-radius: 3px;
    }

    .link__redirect a {
        text-decoration: none;
        color: #fff;
    }

    .link__redirect a:hover {
        background-color: #338a42;
        opacity: 0.8;
    }

    .img_vct1 {
        height: 600px;
        width: 600px;
    }

    .content {
        background-color: rgb(196, 207, 124);
        height: 100%;
    }

    .content_vct {
        margin: 100px 0 0 150px;
        padding: 20px;
        height: 470px;
        width: 470px;
        border: 2px solid #ccc;
        border-radius: 5px;
        background-color: rgb(69, 190, 190);
    }

    #nd {
        font-style: italic;
    }
</style>

